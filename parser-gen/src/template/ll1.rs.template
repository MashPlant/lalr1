      {parser_act}
      _ => impossible!(),
    }
  }

  pub fn parse<'l: 'p>(&mut self, lexer: &mut Lexer<'l>) -> Option<{res_type}> {
    match self._parse({res_nt_id}, &mut lexer.next(), lexer, &HashSet::new()) {
      StackItem::_{res_id}(parse_res) => Some(parse_res),
      _ => None
    }
  }
