macro_rules! set {
  ($($x: expr,)*) => {{
    let mut s = HashSet::new();
    $(s.insert($x);)*
    s
  }};
}

macro_rules! map {
  ($($k: expr => $v: expr,)*) => {{
    let mut m = HashMap::new();
    $(m.insert($k, $v);)*
    m
  }};
}

